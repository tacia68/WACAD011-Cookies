--><div class="col-lg-8">
  <form id = "signup-form" action="/signup" method = "post">

         <div class="page-header ">
              <h1 id="tables">Adicionar Departamento</h1>
                
            </div>

            <div class="bs-component">

<div class="form-group">
                <label class="col-form-label mt-2" for="name">Nome</label>
                <input type="text" class="form-control" placeholder="Default input" id="name" name ="name" value="{{funcionario.name}}">
                <div class="invalid-feedback" style = "display: block">{{showErrors errors "name"}}</div>
                
              </div>

<div class="form-group">
                <label class="col-form-label mt-2" for="senha">senha</label>
                <input type="password" class="form-control" placeholder="Default input" id="senha" name ="senha" value="{{funcionario.senha}}">
               <!-- <div class="invalid-feedback" style = "display: block">{{showErrors errors "senha"}}</div>-->
                
              </div>

<div class="form-group">
                <label class="col-form-label mt-2" for="confirm-senha">senha</label>
                <input type="password" class="form-control" placeholder="Default input" id="confirm-senha" name ="senha" value="{{funcionario.senha}}">
                <div id = "confirm-senha-erro" class="invalid-feedback" style = "display: block">{{showErrors errors "senha"}}</div>
                
              </div>

<div class="form-group">
                <label class="col-form-label mt-2" for="email">email</label>
                <input type="text" class="form-control" placeholder="Default input" id="email" name ="email" value="{{funcionario.email}}">
               <!-- <div class="invalid-feedback" style = "display: block">{{showErrors errors "email"}}</div>-->
                
              </div>

<div class="form-group">
                    <label for="departamento" class="form-label mt-4">Departamento</label>
                    <select class="form-select" id="departamento" name="departamentoId">
                      {{#each departamentos}}
                      <option value="{{id}}">{{name}}</option>
                      {{/each}}
                    </select>
                  </div>







<div class="form-group">
   <input type="hidden" name = "_csrf" value = "{{csrf}}"/><!--Cookie-->
    <button type="submit" class="btn btn-primary">Adicionar</button>
</div>

            </div><!-- /example -->
          </div>
  
  
  
  </form>