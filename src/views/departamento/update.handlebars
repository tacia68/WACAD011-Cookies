<div class="col-lg-8">
  <form action="/dept/update/{{departamento.id}}" method="post">

    <div class="page-header">
      <h1 id="tables">Editar Departamento</h1>
    </div>

    <div class="bs-component">

      <div class="form-group">
        <label class="col-form-label mt-4" for="name">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome" id="name" name="name" value="{{departamento.name}}" defaultValue="{{departamento.name}}">
        <div class="invalid-feedback" style="display: block">{{showErrors errors "name"}}</div>
      </div>

      <div class="form-group">
        <label class="col-form-label mt-4" for="sigla">Sigla</label>
        <input type="text" class="form-control" placeholder="Digite a sigla" id="sigla" name="sigla" value="{{departamento.sigla}}" defaultValue="{{departamento.sigla}}">
        <div class="invalid-feedback" style="display: block">{{showErrors errors "sigla"}}</div>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">

      <button type="submit" class="btn btn-primary">Atualizar</button>
    </div>

  </form>
</div>
